<header class="border" id="header">
  <div class="container-lg">
    <nav class="d-flex align-items-center justify-content-between">
      <!-- Logo -->
      <div class="logo">
        <a href="/">
          <img src="/img/Prutika_Logo_text(2).png" alt="Logo" class="d-none d-sm-block d-xl-none d-xxl-block">
          <img src="/img/Pruttikar_Logo1.png" alt="Logo" style="width: 36px !important;height: 36px;" class="d-sm-none d-xl-block d-xxl-none">
        </a>
      </div>

      <!-- Search Bar (Visible on Desktop) -->
      <div class="d-none d-xl-flex align-items-center w-25 position-relative border-brand-sm">
        <i class="fa-solid fa-magnifying-glass text-brand fs-6 position-absolute"></i>
        <input type="text" class="form-control search-bar ps-5 w-100 shadow-none" id="searchEvent" placeholder="<%= t('partials.header.search') %>" />
        <button class="btn-pink text-white">
          <i class="fa-solid fa-magnifying-glass text-brand fs-6"></i>
        </button>
        <ul class="search-dropdown position-absolute" id="search-dropdown"></ul>
      </div>

      <!-- Action Buttons (Visible on Desktop) -->
      
      <div class="d-none d-xl-flex align-items-center gap-3">
        <a href="<%= (user && user.role != 1) ? `/event/create` : `/profile/organizer` %>" class="btn-outline-pink d-flex align-items-center" role="button">
          <i class="lucide-i" data-lucide="plus" style="stroke-width: 1.25;"></i> <%= t('partials.header.cEvent') %>
        </a>
        <a href="/event/browse" role="button" class="btn-outline-pink d-flex align-items-center">
          <i class="pe-1 fs-6 lucide-i" data-lucide="calendar-days" style="stroke-width: 1.25;"></i> <%= t('partials.header.bEvent') %>
        </a>
        <a href="/ticket/my-ticket" role="button" class="btn-outline-pink d-flex align-items-center">
          <i class="pe-1 lucide-i" data-lucide="ticket" style="stroke-width: 1.25;"></i> <%= t('partials.header.myTicket') %>
        </a>
        
      </div>

      <!-- Right Side (Notification, User Dropdown, or Sign In/Sign Up) -->
      <div class="d-flex align-items-center gap-2">
        <% if (user) { %>
          <div class="dropdown me-1 d-none d-xl-block">
            <button
              class="btn btn-outline-brand text-brand dropdown-toggle hide-arrow p-0 border-0 " style="height: auto !important;"
              type="button"
              id="languageDropdown"
              data-bs-toggle="dropdown"
              aria-expanded="false"
            >
            <i class="fa-solid fa-globe fs-4"></i>
              <span class="d-none d-sm-inline"></span>
            </button>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="languageDropdown">
              <li>
                <a class="dropdown-item" href="?lng=en">
                  <%= t('partials.header.en-btn') %>
                </a>
              </li>
              <li>
                <a class="dropdown-item" href="?lng=kh">
                  <%= t('partials.header.kh-btn') %>
                </a>
              </li>
            </ul>

          </div>
          
          <!-- Notification Icon (Visible when logged in) -->
          <div class="notification-wrapper mt-1 me-2 d-none d-lg-block">
            <div class="notification-icon">
              <i class="fas fa-bell fs-4 text-brand"></i>
              <span class="badge fw-medium" id="unreadCount1">0</span>
            </div>
            <div class="notification-dropdown">
              <div class="notification-header title d-flex justify-content-between bg-brand">
                <div><%= t('partials.header.unread-noti') %></div>
                <span class="fw-normal" id="unreadCount2">0</span>
              </div>
              <div id="noti-wrapper" style="max-height: 300px; overflow-y: auto;">
                <!-- Notification Items -->
              </div>
              <div class="notification-footer mt-3">
                <a href="/notification" class="btn btn-outline-brand w-100 fw-medium"><%= t('partials.header.all-noti') %></a>
              </div>
            </div>
          </div>

          


          <!-- User Dropdown (Visible when logged in) -->
          <div class="dropdown">
            <a href="#" class="dropdown-toggle fs-3 text-brand d-flex align-items-center hide-arrow" role="button" id="accountDropdown" data-bs-toggle="dropdown" aria-expanded="false">
              <div class="userImgPf-wrapper">
                <img id="userImgPf" src="/uploads/<%= user.avatar ? user.avatar : 'default.jpg' %>" alt="pfp">
              </div>
              
            </a>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="accountDropdown">
              <li><a class="dropdown-item" href="<%= (user && user.role != 1) ? `/event/manage` : `/profile/organizer` %>"><i data-lucide="user-round-cog" style="stroke-width: 1.5;width: 24px;"></i> &nbsp;<%= t('partials.header.manage-org') %></a></li>
              <li><a class="dropdown-item" href="/follow/follower"><i data-lucide="user-plus" style="stroke-width: 1.5;width: 24px;"></i> &nbsp;<%= t('partials.header.following') %></a></li>
              <li><a class="dropdown-item" href="/event/wishlist"><i data-lucide="heart" style="stroke-width: 1.5;width: 24px;"></i> &nbsp;<%= t('partials.header.wishlist') %></a></li>
              <li><a class="dropdown-item" href="/profile/info"><i data-lucide="settings" style="stroke-width: 1.5;width: 24px;"></i> &nbsp;<%= t('partials.header.acc-setting') %></a></li>
              <li><a class="dropdown-item border-top" role="button" id="btn-logout" onclick="logOut()"><i data-lucide="log-out" style="stroke-width: 1.5;width: 24px;"></i> &nbsp;<%= t('partials.header.logout') %></a></li>
            </ul>
          </div>
          
        <% } else { %>
          <!-- Sign In/Sign Up Buttons (Visible when logged out) -->
          <div class="d-flex align-items-center gap-2">
            <a href="/auth/signin" role="button" class="btn btn-brand py-2 fw-medium" style="height: auto !important;"><%= t('partials.header.sign-in') %></a>
            <a href="/auth/signup" role="button" class="btn btn-outline-brand py-2 fw-medium" style="height: auto !important;"><%= t('partials.header.sign-up') %></a>
            <div class="dropdown d-none d-xl-block">
              <button
                class="btn btn-outline-brand dropdown-toggle hide-arrow py-2 border-brand-sm text-brand" style="height: auto !important;"
                type="button"
                id="languageDropdown"
                data-bs-toggle="dropdown"
                aria-expanded="false"
              >
              <i class="fa-solid fa-globe fs-4"></i>
                <span class="d-none d-sm-inline"></span>
              </button>
              <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="languageDropdown">
                <li>
                  <a class="dropdown-item" href="?lng=en">
                    <%= t('partials.header.en-btn') %>
                  </a>
                </li>
                <li>
                  <a class="dropdown-item" href="?lng=kh">
                    <%= t('partials.header.kh-btn') %>
                  </a>
                </li>
                
              </ul>
            </div>
          </div>
        <% } %>

        <!-- Hamburger Menu for Mobile -->
        <button class="btn d-xl-none p-0 border-0 ms-1 btn-lg" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar">
          <i class="fa-solid fa-bars fs-4 text-brand"></i>
        </button>
      </div>

      <!-- Offcanvas Menu (Visible on Mobile) -->
      <div class="offcanvas offcanvas-end vh-100" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
        <div class="offcanvas-header">
          <h5 class="offcanvas-title" id="offcanvasNavbarLabel"><%= t('partials.header.menu') %></h5>
          <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
          <!-- Search Bar (Visible on Mobile) -->
          <div class="d-flex align-items-center w-100 position-relative border-brand-sm mb-4">
            <i class="fa-solid fa-magnifying-glass text-brand fs-6 position-absolute"></i>
            <input type="text" class="form-control search-bar ps-5 w-100 shadow-none" id="searchEventMobile" placeholder="<%= t('partials.header.search') %>" />
            <button class="btn-pink text-white">
              <i class="fa-solid fa-magnifying-glass text-brand fs-6"></i>
            </button>
            <ul class="search-dropdown position-absolute" id="search-dropdown-mobile"></ul>
          </div>

          <!-- Action Buttons (Visible on Mobile) -->
          <div class="action-btn d-flex flex-column">
            <a href="<%= (user && user.role != 1) ? `/event/create` : `/profile/organizer` %>" class="btn-outline-pink d-flex align-items-center mb-3" role="button">
              <i class="lucide-i" data-lucide="plus" style="stroke-width: 1.25;"></i> <%= t('partials.header.cEvent') %>
            </a>
            <a href="/event/browse" role="button" class="btn-outline-pink d-flex align-items-center mb-3">
              <i class="pe-1 fs-6 lucide-i" data-lucide="calendar-days" style="stroke-width: 1.25;"></i> <%= t('partials.header.bEvent') %>
            </a>
            <a href="/ticket/my-ticket" role="button" class="btn-outline-pink d-flex align-items-center mb-3">
              <i class="pe-1 lucide-i" data-lucide="ticket" style="stroke-width: 1.25;"></i> <%= t('partials.header.myTicket') %>
            </a>
            <a href="/notification" role="button" class="btn-outline-pink d-flex align-items-center justify-content-between mb-3">
              <div>
                <i class="pe-1 lucide-i" data-lucide="bell" style="stroke-width: 1.25;"></i> Notification
              </div>  <span class="badge text-white bg-brand" id="noti-count-3">4</span>
            </a>
          </div>
          <div class="dropdown ">
            <button
              class="btn btn-outline-brand dropdown-toggle hide-arrow py-2" style="height: auto !important;"
              type="button"
              id="languageDropdown"
              data-bs-toggle="dropdown"
              aria-expanded="false"
            >
            <i class="fa-solid fa-globe fs-4"></i>
              <span class="d-none d-sm-inline"></span>
            </button>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="languageDropdown">
              <li>
                <a class="dropdown-item" href="?lng=en">
                  <%= t('partials.header.en-btn') %>
                </a>
              </li>
              <li>
                <a class="dropdown-item" href="?lng=kh">
                  <%= t('partials.header.kh-btn') %>
                </a>
              </li>
              
            </ul>
          </div>
        </div>
      </div>
    </nav>
  </div>
</header>