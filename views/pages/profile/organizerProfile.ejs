<!DOCTYPE html>
<html lang="<%= lang %>">

    <%- include("../../partials/head.ejs") %>

    <body class="organizer">
        <%- include("../../partials/navbar.ejs") %>

        <div class="container-lg  py-4">
            <h4 id="role"><%= t('profile.org-profile.title') %></h4>
            <div
                class="d-flex justify-content-between align-content-center flex-column flex-md-row mb-3">
                <div class="d-flex my-3 align-items-center gap-3">
                    <div class="orgainerAcount me-1">
                        <img src="" id="pfp"
                            alt>

                    </div>
                    <div class>
                        <div class="mb-2"><h4
                                class="organizerName fs-4 fw-medium mb-0"
                                id="name">
                                Tom Jerranie
                            </h4>
                            <div id="smallName">Hi</div>
                        </div>
                        <div class="d-flex mt-2">
                            <div class="follow fw-medium text-center me-4">
                                <div class="d-block" id="total-event">10</div>
                                <span class="text-muted"><%= t('profile.org-profile.Events') %></span>
                            </div>
                            <div class="follow fw-medium text-center me-4">
                                <div class="d-block" id="total-follower">5</div>
                                <div><span
                                        class="text-muted"><%= t('profile.org-profile.follower') %></span></div>
                            </div>
                            <div class="follow fw-medium text-center">
                                <div class="d-block"
                                    id="total-following">50</div>
                                <div><span
                                        class="text-muted"><%= t('profile.org-profile.following') %></span></div>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="d-flex align-items-center gap-3">
                    <button id="btnFollow" class="btn btn-brand fw-medium px-4 py-2 rounded-5"
                        type="button" style="height: auto !important;">
                        <%= t('profile.org-profile.following') %>
                    </button>
                    <a role="button" href="#modalBackdrop" id="openModalBtn"
                        class="btn btn-outline-brand fw-medium px-4 py-2 rounded-5"
                        style="height: auto !important;"><%= t('profile.org-profile.contact') %></a>
                </div>
            </div>
            <div class="d-flex flex-column" id="organizer-info">
                <div class>
                    <h5 class="mb-3"><%= t('profile.org-profile.about') %></h5>
                    <div class="about mb-4">
                        <div class="mb-2 d-flex align-items-center gap-2">
                            <i data-lucide="phone" width="1.25rem"
                                class="text-brand"></i>
                            <span class id="contact-phone">088 777
                                999</span>
                        </div>
                        <div class="mb-2 d-flex align-items-center gap-2">
                            <i data-lucide="mail" width="1.25rem"
                                class="text-brand"></i>
                            <span
                                class
                                id="contact-email">tomjerranie@gmail.com</span>
                        </div>
                        <div class="mb-2 d-flex align-items-center gap-2">
                            <i data-lucide="map-pin" width="1.25rem"
                                class="text-brand"></i>
                            <span class id="contact-location">Street 2002, Sen
                                Sok, Phnom Penh, Cambodia </span>
                        </div>
                    </div>
                </div>
                <div class>
                    <h5 class="mb-3" id>
                        <%= t('profile.org-profile.social') %>
                    </h5>
                    <div id="social-media"
                        class="social-media-orgainzer mt-2 gap-3 d-flex align-items-center mb-4">
                        <a href="#" id="fb"
                            class="social-icon mx-0 social-icon-organizer fs-6"
                            style="width: 36px;height: 36px;">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a href="#" id="tel" class="social-icon mx-0 fs-6"
                            style="width: 36px;height: 36px;">
                            <i class="fab fa-telegram"></i>
                        </a>
                        <a href="#" id="tt" class="social-icon mx-0  fs-6"
                            style="width: 36px;height: 36px;">
                            <i class="fab fa-tiktok"></i>
                        </a>
                        <a href="#" id="li" class="social-icon mx-0 fs-6"
                            style="width: 36px;height: 36px;">
                            <i class="fab fa-linkedin-in"></i>
                        </a>
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-between align-items-center">
                <h5 class><%= t('profile.org-profile.Events') %></h5>
                <h6 class="text-brand"><span id="total-event-2">0</span>
                    <%= t('profile.org-profile.Events') %></h6>
            </div>

            <select id="select-sort"
                class="form-select w-auto mb-3 border-brand-sm rounded-5 bg-transparent ps-3">
                <option value=""><%= t('profile.org-profile.all') %></option>
                <option value="3"><%= t('profile.org-profile.upcoming') %></option>
                <option value="2"><%= t('profile.org-profile.showing') %></option>
                <option value="1"><%= t('profile.org-profile.past') %></option>
            </select>

            <div class="row g-4" id="event-list">
                
            </div>
            <div class="pagination-container" id="pagination">
                <button class="pagination-button btn-icon"
                    onclick="changePage(currentPage - 1)"
                    id="prevBtn" disabled><i
                        class="fa-solid fa-angle-left"></i></button>

                <div id="pagination-numbers"></div>

                <button class="pagination-button btn-icon"
                    onclick="changePage(currentPage + 1)"
                    id="nextBtn"><i
                        class="fa-solid fa-angle-right"></i></button>
            </div>

        </div>

        <!-- Modal Structure -->
<div id="modalBackdrop" class="modal-backdrop">
    <div id="contactModal" class="contact-modal">
        <div class="close-button-container">
            <a href="#" class="close-button">
                <i data-lucide="x"></i>
            </a>
        </div>
        
        <div class="modal-header mb-4 d-flex flex-column align-items-start">
            <h2 class="modal-title">Contact</h2>
            <p class="modal-subtitle">Get in touch with sophak12</p>
        </div>
        
        <div class="contact-list">
            <div class="contact-item-container">
                <div class="contact-item has-link" onclick="window.open('tel:012321321', '_blank')">
                    <div class="social-icon social-icon-phone">
                        <i class="fa-solid fa-phone"></i>
                    </div>
                    <div class="contact-item-content">
                        <p class="contact-item-label">Phone</p>
                        <p class="contact-item-value mb-0">012321321</p>
                    </div>
                    <div class="contact-item-icon">
                        <i data-lucide="external-link"></i>
                    </div>
                </div>
            </div>
            <div class="contact-item-container">
                <div class="contact-item has-link" onclick="window.open('mailto:phak@gmail.com', '_blank')">
                    <div class="social-icon social-icon-email">
                        <i class="fa-solid fa-envelope"></i>
                    </div>
                    <div class="contact-item-content">
                        <p class="contact-item-label">Email</p>
                        <p class="contact-item-value mb-0">phak@gmail.com</p>
                    </div>
                    <div class="contact-item-icon">
                        <i data-lucide="external-link"></i>
                    </div>
                </div>
            </div>
            <div class="contact-item-container">
                <div class="contact-item has-link" onclick="window.open('https://facebook.com/sophak12', '_blank')">
                    <div class="social-icon social-icon-facebook">
                        <i class="fab fa-facebook-f"></i>
                    </div>
                    <div class="contact-item-content">
                        <p class="contact-item-label">Facebook</p>
                        <p class="contact-item-value mb-0">facebook.com/sophak12</p>
                    </div>
                    <div class="contact-item-icon">
                        <i data-lucide="external-link"></i>
                    </div>
                </div>
            </div>
            <div class="contact-item-container">
                <div class="contact-item has-link" onclick="window.open('https://instagram.com/sophak12', '_blank')">
                    <div class="social-icon social-icon-instagram">
                        <i class="fab fa-telegram"></i>
                    </div>
                    <div class="contact-item-content">
                        <p class="contact-item-label">Telegram</p>
                        <p class="contact-item-value mb-0">@sophak12</p>
                    </div>
                    <div class="contact-item-icon">
                        <i data-lucide="external-link"></i>
                    </div>
                </div>
            </div>
            <div class="contact-item-container">
                <div class="contact-item has-link" onclick="window.open('https://linkedin.com/in/sophak12', '_blank')">
                    <div class="social-icon social-icon-linkedin">
                        <i class="fab fa-linkedin-in"></i>
                    </div>
                    <div class="contact-item-content">
                        <p class="contact-item-label">LinkedIn</p>
                        <p class="contact-item-value mb-0">linkedin.com/in/sophak12</p>
                    </div>
                    <div class="contact-item-icon">
                        <i data-lucide="external-link"></i>
                    </div>
                </div>
            </div>
            <div class="contact-item-container">
                <div class="contact-item has-link" onclick="window.open('https://tiktok.com/@sophak12', '_blank')">
                    <div class="social-icon social-icon-tiktok">
                        <i class="fab fa-tiktok"></i>
                    </div>
                    <div class="contact-item-content">
                        <p class="contact-item-label">TikTok</p>
                        <p class="contact-item-value mb-0">@sophak12</p>
                    </div>
                    <div class="contact-item-icon">
                        <i data-lucide="external-link"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
        

        <%- include("../../partials/script.ejs") %>

        <script src="/js/profile/view-profile.js"></script>

    </body>

</html>