<!DOCTYPE html>
<html lang="<%= lang %>">
    <%- include("../../partials/head.ejs") %>
<body>
    <%- include("../../partials/navbar.ejs")  %>
    <div class="container-lg py-5">
        <div class="row">
            <div class="col-12 col-md-4 ">
                <%- include('../../partials/profile-sidebar.ejs') %>
            </div>
        <div class="col-12 col-md-8">
           <div class="card border-0 shadow-light-sm rounded-3 p-4">
            <a onclick="history.back()" role="button"> <h4><i class="bi bi-caret-left-fill text-brand me-2"></i><%= t('profile.changePw.title') %></h4></a>
            <form id="frm" class=" mt-3">
                <h5></h5>
                <p><%= t('profile.changePw.content') %></p>

                <div class="mb-3">
                    <label for="" class="form-label  fw-medium mb-2"><%= t('profile.changePw.current-pw') %></label>
                <div class="input-field input-field-setting" id="input-field-current-password">
                    <i class="fas fa-lock "></i>
                    <input type="password" placeholder="<%= t('profile.changePw.current-pw') %>"
                      id="current-password" />
                      <!-- <i class="fa-solid fa-eye"></i> -->
                  </div>
                  <div
                    class="invalid_feedback text-danger d-flex align-items-center mb-2"
                    id="invalid_feedback_current_password">
                    <i
                      class="bi bi-exclamation-triangle-fill d-flex align-items-center"></i>
                    <div class="ms-2"><%= t('profile.changePw.error-pw') %></div>
                  </div>
                </div>
                <div class="mb-3">
                    <label for="" class="form-label fw-medium mb-2"><%= t('profile.changePw.new-pw') %></label>
                <div class="input-field input-field-setting" id="input-field-new-password">
                    <i class="fas fa-lock "></i>
                    <input type="password" placeholder="<%= t('profile.changePw.new-pw') %>"
                      id="new-password" />
                      <!-- <i class="fa-solid fa-eye"></i> -->
                  </div>
                  <div
                    class="invalid_feedback text-danger d-flex align-items-center mb-2"
                    id="invalid_feedback_new_password">
                    <i
                      class="bi bi-exclamation-triangle-fill d-flex align-items-center"></i>
                    <div class="ms-2"><%= t('profile.changePw.error-pw') %></div>
                  </div>
                </div>
                <div class="mb-3">
                    <label for="" class="form-label  fw-medium mb-2"><%= t('profile.changePw.cf-pw') %></label>
                <div class="input-field input-field-setting" id="input-field-confirm-new-password">
                    <i class="fas fa-lock "></i>
                    <input type="password" placeholder="<%= t('profile.changePw.cf-pw') %>"
                      id="confirm-new-password" />
                      <!-- <i class="fa-solid fa-eye"></i> -->
                  </div>
                  <div
                    class="invalid_feedback text-danger d-flex align-items-center mb-2"
                    id="invalid_feedback_confirm_new_password">
                    <i
                      class="bi bi-exclamation-triangle-fill d-flex align-items-center"></i>
                    <div class="ms-2"><%= t('profile.changePw.error-cfPw') %></div>
                  </div>
                </div>
                <button type="submit" id="btnChangePassword" class="btn btn-brand w-100"><%= t('profile.changePw.change-pw') %></button>


            </form>
           </div>


        </div>
    </div>
 
    </div>

    <%- include("../../partials/script.ejs")  %>

    <script src="/js/profile/change-password.js"></script>
    
</body>
</html>