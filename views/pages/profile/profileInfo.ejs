            .avatar-upload {
                position: relative;
                max-width: 205px;
                margin: 10px auto;
                text-align: center;
                /* border: 1px solid red; */
            }
    
            .avatar-edit {
                position: absolute;
                right: 36px;
                z-index: 1;
                bottom: 8px;
                outline: 3px solid #fff;
                border-radius: 50%;
                box-shadow: none;
            }
    
            .avatar-edit input {
                display: none;
            }
    
            .avatar-edit label {
                display: inline-block;
                width: 30px;
                height: 30px;
                border-radius: 100%;
                background: #FFFFFF;
                /* box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.12); */
                cursor: pointer;
                text-align: center;
                /* font-size: 18px; */
                /* line-height: 34px; */
                
            }
    
            .avatar-edit label:hover {
                background: #f1f1f1;
            }
    
            .avatar-preview img {
                width: 140px;
                height: 140px;
                border-radius: 100%;
                border: 2px solid var(--c-brand);
                object-fit: cover;

            }
    
            #deleteImage {
                margin-top: 10px;
                /* display: none; */
            }

    
    .avatar-preview:hover #deleteImage {
        display: block !important;
    }
    
    .cropper-modal{
        background-color: transparent !important;
    }
    
    .cropper-bg{
        background-image: none !important;
    }
    
    .cropper-container{
        display: flex !important;
        align-items: center !important;
        justify-content: center !important;
        object-fit: cover;
    }
    
    .cropper-wrap-box{
    width: 100% !important;
    height: 100% !important;
        display: flex !important;
        align-items: center !important;
        justify-content: center !important;
    }
    
    .cropper-canvas{
        display: flex !important;
        align-items: center !important;
        justify-content: center !important;
    }

        </style>
