<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Followers Page</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="../../../public/css/bootstrap.min.css">
    <link rel="stylesheet" href="../../../public/vendor/bootstrap-icon/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">
    <link rel="stylesheet" href="../../../public/css/main.css">
    <link rel="stylesheet" href="../../../public/css/style.css">
</head>
<body>

<div class="container mt-4">
    <!-- Back Arrow and Name -->
    <div class="d-flex align-items-center">
        <a href="#"><i class="fa-solid fa-chevron-left icon-backpage fs-4"></i></a>
        <h4 class="ms-3 fw-bold">Tom Jerranie</h4>
    </div>

    <!-- Followers & Following Tabs -->
    <ul class="nav nav-tabs mt-3 border-0">
        <li class="nav-item">
            <a class="nav-link active fw-bold" id="followers-tab" data-bs-toggle="tab" data-bs-target="#followers">5k Followers</a>
        </li>
        <li class="nav-item">
            <a class="nav-link fw-bold text-muted" id="following-tab" data-bs-toggle="tab" data-bs-target="#following">50 Following</a>
        </li>
    </ul>

    <!-- Search Box -->
    <div class="col-12 col-md-8 mt-4">
        <div class="d-flex align-items-center w-50 position-relative">
            <input type="text" class="form-control search-bar border-style w-100" id="searchEvent" placeholder="Search...">
            <button class="btn-pink position-absolute"><i class="fa-solid fa-magnifying-glass fs-6"></i></button>
            <ul class="search-dropdown position-absolute" id="search-dropdown"></ul>
        </div>
    </div>

    <!-- Tab Content -->
    <div class="tab-content mt-4 m-0">
        <!-- Followers List -->
        <div class="tab-pane fade show active" id="followers">
            <h6 class="fw-bold">All followers</h6>
            <div class="list-group">
                <div class="d-flex align-items-center justify-content-between mt-3">
                    <div class="d-flex align-items-center"> 
                        <img src="../../../public/img/Default_pfp.jpg" alt="Man Malina" class="rounded-circle" style="width: 50px; height: 50px; object-fit: cover;">
                        <div class="ms-3">
                            <h6 class="mb-0">Man Malina</h6>
                            <small class="text-muted">@Malina</small>
                        </div>
                    </div>
                    
                    <button class="follow-btn btn-brand">Follow Back</button>
                </div>
            </div>
            <div class="list-group">
                <div class="d-flex align-items-center justify-content-between mt-3">
                    <div class="d-flex align-items-center"> 
                        <img src="../../../public/img/Default_pfp.jpg" alt="Man Malina" class="rounded-circle" style="width: 50px; height: 50px; object-fit: cover;">
                        <div class="ms-3">
                            <h6 class="mb-0">Man Malina</h6>
                            <small class="text-muted">@Malina</small>
                        </div>
                    </div>
                    
                    <button class="follow-btn btn-brand">Follow Back</button>
                </div>
            </div>
        </div>

        <!-- Following List -->
        <div class="tab-pane fade" id="following">
            <h6 class="fw-bold">People you follow</h6>
            <div class="list-group">
                <div class="d-flex align-items-center justify-content-between mt-3">
                    <div class="d-flex align-items-center">
                        <!-- Fixed Profile Image -->
                        <img src="../../../public/img/Default_pfp.jpg" alt="John Doe" class="rounded-circle" style="width: 50px; height: 50px; object-fit: cover;">
                        <div class="ms-3">
                            <h6 class="mb-0">John Doe</h6>
                            <small class="text-muted">@johndoe</small>
                        </div>
                    </div>
                    <div class="d-flex align-items-center">
                        <button class="follow-btn btn-brand">Message</button>
                        <div class="dropdown ms-2">
                            <button class="border-0 bg-transparent p-2" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fa-solid fa-ellipsis text-brand fs-5"></i>
                            </button>
                            <ul class="dropdown-menu border-0 shadow-sm">
                                <li><a class="dropdown-item" href="#">Unfollow</a></li>
                                <li><a class="dropdown-item" href="#">Something else here</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                
                <div class="d-flex align-items-center justify-content-between mt-3">
                    <div class="d-flex align-items-center">
                        <img src="../../../public/img/Default_pfp.jpg" alt="Jane Smith" class="rounded-circle" style="width: 50px; height: 50px; object-fit: cover;">
                        <div class="ms-3">
                            <h6 class="mb-0">Jane Smith</h6>
                            <small class="text-muted">@janesmith</small>
                        </div>
                    </div>    
                    <div class="d-flex align-items-center">
                        <button class="follow-btn btn-brand">Message</button>
                        <div class="dropdown ms-2">
                            <button class="border-0 bg-transparent p-2" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fa-solid fa-ellipsis text-brand fs-5"></i>
                            </button>
                            <ul class="dropdown-menu border-0 shadow-sm">
                                <li><a class="dropdown-item" href="#">Unfollow</a></li>
                                <li><a class="dropdown-item" href="#">Something else here</a></li>
                            </ul>
                        </div>
                    </div>
                </div>

            </div>
        </div> 
    </div>
</div>

<!-- Bootstrap JS -->
<script src="../../../public/js/bootstrap.bundle.min.js"></script>

</body>
</html>
