<!DOCTYPE html>
<html lang="en">
<%- include("../../partials/admin/head.ejs") %>

	<body>

		<%- include('../../partials/admin/preloader.ejs') %>
			<div id="main-wrapper">
				<%- include('../../partials/admin/nav-header.ejs') %>
					<%- include('../../partials/admin/header.ejs') %>
						<%- include('../../partials/admin/sidebar.ejs') %>
							<div class="content-body">
								<!-- row -->
								<div class="container-fluid">
									<div class="row">
										<div class="col-xl-12">
											<div class="row">
												<div class="col-xl-12">
													<div class="row">
														<div class="col-xl-6 col-sm-6">
															<div class="card">
																<div
																	class="card-body d-flex px-4 pb-0 justify-content-between">
																	<div>
																		<h4 class="fs-18 font-w600 mb-4 text-nowrap">
																			Total Users</h4>
																		<div class="d-flex align-items-center">
																			<h2 class="fs-32 font-w700 mb-0">
																				<%= totalUsers %>
																					<!-- Dynamic total users from tbl_users -->
																			</h2>
																			<span class="d-block ms-4">
																				<svg width="21" height="11"
																					viewbox="0 0 21 11" fill="none"
																					xmlns="http://www.w3.org/2000/svg">
																					<path
																						d="M1.49217 11C0.590508 11 0.149368 9.9006 0.800944 9.27736L9.80878 0.66117C10.1954 0.29136 10.8046 0.291359 11.1912 0.661169L20.1991 9.27736C20.8506 9.9006 20.4095 11 19.5078 11H1.49217Z"
																						fill="#09BD3C"></path>
																				</svg>
																				<small
																					class="d-block fs-16 font-w400 text-success">+0.5%</small>
																			</span>
																		</div>
																	</div>
																	<div id="columnChart"></div>
																</div>
															</div>
														</div>
														<div class="col-xl-6 col-sm-6">
															<div class="card">
																<div class="card-body px-4 pb-0">
																	<h4 class="fs-18 font-w600 mb-5 text-nowrap">
																		Total Events</h4>
																	<div class="progress default-progress">
																		<div class="progress-bar bg-gradient1 progress-animated"
																			style="width: 40%; height:10px;"
																			role="progressbar">
																			<span class="sr-only">45% Complete</span>
																		</div>
																	</div>
																	<div
																		class="d-flex align-items-end mt-2 pb-3 justify-content-between">
																		<span>76 left from target</span>
																		<h4 class="mb-0">
																			<%= totalEvents %>
																		</h4>
																		<!-- Dynamic total events from tbl_event -->
																	</div>
																</div>
															</div>
														</div>
														<div class="col-xl-6 col-sm-6">
															<div class="card">
																<div
																	class="card-body d-flex px-4 justify-content-between">
																	<div>
																		<h2 class="fs-32 font-w700">
																			<%= totalCategories %>
																		</h2>
																		<!-- Dynamic total categories from tbl_category -->
																		<span class="fs-18 font-w500 d-block">Total
																			Categories</span>
																		<span class="d-block fs-16 font-w400"><small
																				class="text-danger">-2%</small> than
																			last month</span>
																	</div>
																	<div id="NewCustomers"></div>
																</div>
															</div>
														</div>
														<div class="col-xl-6 col-sm-6">
															<div class="card">
																<div
																	class="card-body d-flex px-4 justify-content-between">
																	<div>
																		<h2 class="fs-32 font-w700">
																			<%= totalTickets %>
																		</h2>
																		<!-- Dynamic total tickets from tbl_ticket -->
																		<span class="fs-18 font-w500 d-block">Total
																			Tickets</span>
																		<span class="d-block fs-16 font-w400"><small
																				class="text-success">-2%</small> than
																			last month</span>
																	</div>
																	<div id="NewCustomers1"></div>
																</div>
															</div>
														</div>
													</div>
												</div>
												<div class="col-xl-12">
													<div class="card">
														<div class="card-body">
															<div class="row">
																<div class="col-xl-6 col-sm-6">
																	<div class="owl-carousel card-slider">
																		<div class="items">
																			<h4 class="fs-20 font-w700 mb-4">
																				<%= recentEvent.title %>
																					<!-- Dynamic recent event title from tbl_event -->
																			</h4>
																			<span class="fs-14 font-w400">
																				<%= recentEvent.description %>
																			</span> <!-- Dynamic description -->
																		</div>
																	</div>
																</div>
																<div class="col-xl-6 redial col-sm-6">
																	<div id="redial"></div>
																	<span class="text-center d-block fs-18 font-w600">On
																		Progress <small class="text-success">
																		</small></span> <!-- Dynamic progress -->
																</div>
															</div>
														</div>
													</div>
												</div>
												<div class="col-xl-12 col-lg-12">
													<div class="row">
														<div class="col-xl-6 col-xxl-12 col-sm-6">
															<div class="card">
																<div class="card-header border-0">
																	<div>
																		<h4 class="fs-20 font-w700">Ticket Categories
																		</h4>
																		<span class="fs-14 font-w400 d-block">Lorem
																			ipsum dolor sit amet</span>
																	</div>
																</div>
																<div class="card-body">
																	<div id="emailchart"></div>
																	<div class="mb-3 mt-4">
																		<h4 class="fs-18 font-w600">Legend</h4>
																	</div>
																	<div>
																		<% ticketCategories.forEach(function(category) {
																			%> <!-- Loop through categories -->
																			<div
																				class="d-flex align-items-center justify-content-between mb-4">
																				<span class="fs-18 font-w500">
																					<svg class="me-3" width="20"
																						height="20" viewbox="0 0 20 20"
																						fill="none"
																						xmlns="http://www.w3.org/2000/svg">
																						<rect width="20" height="20"
																							rx="6"
																							fill="<%= category.color %>">
																						</rect>
																						<!-- Dynamic category color -->
																					</svg>
																					<%= category.name %> (<%=
																							category.percentage %>%)
																							<!-- Dynamic category name and percentage -->
																				</span>
																				<span class="fs-18 font-w600">
																					<%= category.count %>
																				</span> <!-- Dynamic category count -->
																			</div>
																			<% }); %>
																	</div>
																</div>
																<div class="card-footer border-0 pt-0">
																	<a href="javascript:void(0);"
																		class="btn btn-outline-primary d-block btn-rounded">Update
																		Progress</a>
																</div>
															</div>
														</div>
													</div>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>

							<!-- Footer -->
							<%- include('../../partials/admin/footer.ejs') %>

			</div>

			<!-- Scripts -->
			<%- include('../../partials/admin/script.ejs') %>

	</body>

</html>