        <%- include('../../partials/admin/preloader.ejs') %>

            <div id="main-wrapper">
                <%- include('../../partials/admin/nav-header.ejs') %>
                    <%- include('../../partials/admin/chatbox.ejs') %>
                        <%- include('../../partials/admin/header.ejs') %>
                            <%- include('../../partials/admin/sidebar.ejs') %>

                                <div class="content-body">
                                    <div class="container-fluid">
                                        <!-- row -->
                                        <div class="row">
                                            <div class="col-12">
                                                <div class="card">
                                                    <div class="card-header">
                                                        <h4 class="card-title">Display all Request Organizer</h4>
