<!DOCTYPE html>
<html lang="en">

<%- include('../../partials/admin/head.ejs') %>

    <body>
        <style>
            table.dataTable thead .sorting_asc,
            table.dataTable thead .sorting {
                background-image: none !important;
                cursor: none !important;
            }

            #search {
                width: 200px !important;
            }

            .form-select {
                display: inline;
                width: 200px !important;
                height: 49px !important;

            }

            .form-select:focus {
                border-color: #ff1694;
                outline: 0;
                box-shadow: none;
            }
        </style>
        <%- include('../../partials/admin/preloader.ejs') %>
            <div id="main-wrapper">
                <%- include('../../partials/admin/nav-header.ejs') %>
                    <%- include('../../partials/admin/header.ejs') %>
                        <%- include('../../partials/admin/sidebar.ejs') %>
                            <div class="content-body">
                                <div class="container-fluid">
                                    <!-- row -->
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="card">
                                                <div class="card-header">
                                                    <h4 class="card-title">Display all event</h4>
                                                </div>
                                                <div class="card-body">
                                                    <div class="table-responsive">
                                                        <form id="searchForm">
                                                            <div
                                                                class="d-flex justify-content-between align-items-center">
                                                                <select id="role" class="form-select">
                                                                    <option value="">All Roles</option>
                                                                    <option value="1">Guest</option>
                                                                    <option value="2">Organizer</option>
                                                                    <option value="3">Admin</option>
                                                                </select>
                                                                <input class="form-control" type="text" id="search"
                                                                    placeholder="Search by name">
                                                            </div>
                                                        </form>
                                                        <table id="example6" class="display" style="min-width: 845px">
                                                            <thead>
                                                                <tr>
                                                                    <th>ID</th>
                                                                    <th>Eng_name</th>
                                                                    <th>Kh_name</th>
                                                                    <th>Thumbnail</th>
                                                                    <th>Description</th>
                                                                    <th>Event Type</th>
                                                                    <th>Is published</th>
                                                                    <th>Location</th>
                                                                    <th>Action</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody id="tableBody">

                                                            </tbody>
                                                        </table>
                                                        <nav aria-label="Page navigation">
                                                            <ul id="paginationEvents"
                                                                class="pagination justify-content-center">
                                                            </ul>
                                                        </nav>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <div class="card">
                                                <div class="card-header">
                                                    <h4 class="card-title">Display all event categories</h4>
                                                </div>
                                                <div class="card-body">
                                                    <div class="table-responsive">
                                                        <form id="searchForm">
                                                            <div
                                                                class="d-flex justify-content-between align-items-center">
                                                                <button type="button" class="btn btn-primary btn-sm"
                                                                    data-bs-toggle="modal"
                                                                    data-bs-target="#createCategory">
                                                                    Create New
                                                                </button>
                                                                <input class="form-control" type="text" id="search"
                                                                    placeholder="Search by name">
                                                            </div>
                                                        </form>
                                                        <table id="example5" class="display" style="min-width: 845px">
                                                            <thead>
                                                                <tr>
                                                                    <th>ID</th>
                                                                    <th>Name</th>
                                                                    <th>Created At</th>
                                                                    <th>Updated At</th>
                                                                    <th>Action</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody id="categoryTableBody">

                                                            </tbody>
                                                        </table>
                                                        <nav aria-label="Page navigation">
                                                            <ul id="paginationCategories" class="pagination justify-content-center">
                                                            </ul>
                                                        </nav>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <%- include('../../partials/admin/footer.ejs') %>
            </div>

            <div class="modal fade" id="viewDetail">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h3 class="modal-title">Event Detail</h3>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body text-center" id="detailContent">
                            Loading...
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal fade" id="createCategory">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h3 class="modal-title">Create Event Category</h3>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body" id="createContent">
                            Loading...
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal fade" id="editCategory">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h3 class="modal-title">Edit Event Category</h3>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body" id="editContent">
                            Loading...
                        </div>
                    </div>
                </div>
            </div>

            <!-- Required vendors -->
<%- include("../../partials/admin/script.ejs") %>

            <script src="/js/admin/event.js" defer></script>

    </body>

</html>