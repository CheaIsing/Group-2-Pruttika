<!DOCTYPE html>
<html lang="<%= lang %>">

<%- include('../../partials/head.ejs') %>

  <body class>
    <!-- <div class="logo">
        <a href="../../homepage.html">
            <img class="m-4" src="/img/Prutika_Logo_text(2).png" alt style="width: 160px;">
        </a>
      </div> -->
    <div class="container-form">
      <div class="forms-container">
        <div class="signin-signup">
          <!-- Sign In Form -->
          <form class="sign-in-form" id="sign-in-form" autocomplete="off">
            <a href="/">
              <img src="/img/Pruttikar_Logo1.png" class="mb-2" height="40px" width="40px" alt="logo">
            </a>
            <h2 class="titles fw-medium"><%= t('auth.signin.heading') %></h2>
            <div class="mb-3" style="max-width: 380px; width: 100%;">
              <div class="input-field" id="input-field-email">
                <i class="fas fa-envelope"></i>
                <input type="text" placeholder="<%= t('auth.signin.email') %>" id="sign-in-email" class
                  autofocus />
              </div>
              <div
              class="invalid_feedback text-danger d-flex align-items-center"
              id="invalid_feedback_email">
              <i
                class="bi bi-exclamation-triangle-fill d-flex align-items-center"></i>
              <div class="ms-2">Invalid email.</div>
            </div>
            </div>
            

            <div class="mb-3" style="max-width: 380px; width: 100%;">
              <div class="input-field" id="input-field-password">
                <i class="fas fa-lock "></i>
                <input type="password" placeholder="<%= t('auth.signin.password') %>"
                  id="sign-in-password" />
              </div>
              <div
                class="invalid_feedback text-danger d-flex align-items-center"
                id="invalid_feedback_password">
                <i
                  class="bi bi-exclamation-triangle-fill d-flex align-items-center"></i>
                <div class="ms-2">Password must be at least 6 characters.</div>
              </div>
            </div>

            

            <div class="d-flex justify-content-between"
              style="width: 100%;max-width: 380px;margin-bottom: 0.9rem;">
              <div class="form-check ">
                <input class="form-check-input shadow-none" type="checkbox" value id="rememberMe">
                <label class="form-check-label" for="rememberMe">
                  <%= t('auth.signin.remember') %>
                </label>
              </div>
              <div class="form-check">
                <a href="/auth/forgot-password" class="text-brand text-decoration-none fw-normal link-brand">
                  <%= t('auth.signin.forgot') %>
                </a>
              </div>
            </div>
            <!-- Changed input to button -->
            <div style="width: 100%;max-width: 380px;">

              <button type="submit" class="btn btn-brand w-100" id="btnSignIn">
                <%= t('auth.signin.signin') %>
              </button>
            </div>

            <p class="social-text">
              <%= t('auth.signin.social') %>
            </p>
            <div class="social-media">
              <a href="#" class="social-icon">
                <i class="fab fa-facebook-f"></i>
              </a>
              <a href="#" class="social-icon">
                <i class="fab fa-twitter"></i>
              </a>
              <a href="#" class="social-icon">
                <i class="fab fa-google"></i>
              </a>
              <a href="#" class="social-icon">
                <i class="fab fa-linkedin-in"></i>
              </a>
            </div>
          </form>
        </div>
      </div>

      <!-- Panels Container -->
      <div class="panels-container">
        <div class="panel left-panel">
          <div class="content">
            <h3>
              <%= t('auth.signin.content') %>
            </h3>
            <a href="/auth/signup" class="btn btn-outline-brand-white mt-3" id="sign-up-btn">
              <%= t('auth.signup.signup') %>
            </a>
          </div>
          <img src="/img/login.png" class="image" alt />
        </div>
        <div class="panel right-panel">
          <div class="content">
            <h3>
              <%= t('auth.signup.content') %>
            </h3>
            <button type="submit" class="btn transparent mt-3" id="sign-in-btn">
              <%= t('auth.signin.signin') %>
            </button>
          </div>
          <img src="/img/login.png" class="image" alt="" />
        </div>
      </div>
    </div>

    <%- include('../../partials/script.ejs') %>
      <script src="/js/auth/sign-in.js"></script>

  </body>

</html>