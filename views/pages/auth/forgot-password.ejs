<!DOCTYPE html>
<html lang="en">

    <%- include('../../partials/head.ejs') %>

    <body>

        <div class="container-form sign-up-mode">
            <div class="forms-container">
              <div class="signin-signup">
      
                <!-- Sign Up Form -->
                <form id="forgot-password-form" class="sign-up-form" autocomplete="off">
                  <h2 class="title mb-md-4">Forgot Password</h2>
                  
                  <label style="max-width: 380px; width: 100%;" class="fw-medium" for="">Enter Your Email Address</label>
                  <div class="input-field" id="input-field-email">
                    <i class="fas fa-envelope"></i>
                    <input type="text" placeholder="example@email.com" id="email" autofocus/>
                  </div>
                  <div
                    class="invalid_feedback text-danger d-flex align-items-center mb-2" id="invalid_feedback_email">
                    <i class="bi bi-exclamation-triangle-fill d-flex align-items-center"></i>
                    <div class="ms-2">Invalid email.</div>
                  </div>
                  
                  <div class style="max-width: 380px; width: 100%;">
      
                    <!-- Changed input to button -->
                    <button type="submit" class="btn btn-brand w-100 mt-1" id="btnForgotPass">Send</button>
                  </div>
                </form>
              </div>
            </div>
      
            <!-- Panels Container -->
            <div class="panels-container">
              <div class="panel left-panel">
                <div class="content">
                  <h3>
                    Create amazing memories with us!
                  </h3>
                  <button class="btn transparent mt-3" id="sign-up-btn">Sign
                    up</button>
                </div>
                <img src="/img/forgotPass.png" class="image" alt />
              </div>
              <div class="panel right-panel">
                <!-- <div class="content">
                  <h3>
                    Welcome back! Let's get started Again!.
                  </h3>
                  <a role="button" href="/signin" class="btn transparent mt-3 "
                    id="sign-in-btn">Sign In</a>
                </div> -->
                <img src="/img/undraw_forgot-password_odai 1.svg" class="image" alt />
              </div>
            </div>
          </div>

        <%- include('../../partials/script.ejs')  %>
        <script src="/js/auth/forgot-password.js"></script>
    </body>

</html>