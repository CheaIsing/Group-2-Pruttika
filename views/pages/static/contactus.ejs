<!DOCTYPE html>
<html lang="<%= lang %>">

<%- include("../../partials/head.ejs")  %>
<body>
    <%- include("../../partials/navbar.ejs")  %>
    <div class="Contact_us">
        <!-- Pink Background -->
        <div class="PinkBG">
            <div class="d-flex justify-content-center mt-4">
                <div class="card-categories rsm text-center mb-lg-3 mb-md-3 me-3">
                    <div class="categories-icon">
                        <a href="#"><i class="fa-solid fa-phone fs-4 icon"></i></a>
                    </div>
                    <div class="categories-title mt-2">
                        <p> +885 777 999</p>    
                    </div>
                </div>
                <div class="card-categories text-center mb-lg-3 mb-md-3">
                    <div class="categories-icon">
                        <a href="#"><i class="fas fa-envelope me-2 fs-4"></i></a>
                    </div>
                    <div class="categories-title mt-2">
                        <p> pruttika@gmail.com </p>    
                    </div>
                </div>
               </div>  
        </div>
        <!-- Contact Form Container -->
        <div class="form-container">
            <h2 class="contactus-head text-center mb-4"><%= t('static.contact.title') %></h2>
            <form>
                <div class="row">
                    <div class="col-12 col-md-6 mb-3">
                        <!-- English Username -->
                        <label for="sign-up-name" class="form-label fw-medium text-start"><%= t('static.contact.engName') %></label>
                        <div class="input-field input-field-setting">
                            <i class="fas fa-user"></i>
                            <input type="text" placeholder="<%= t('static.contact.engName') %>" id="sign-up-name" />
                        </div>
                    </div>
                    <div class="col-12 col-md-6 mb-3">
                        <!-- Khmer Username -->
                        <label for="sign-up-khname" class="form-label fw-medium"><%= t('static.contact.khName') %></label>
                        <div class="input-field input-field-setting">
                            <i class="fas fa-user"></i>
                            <input type="text" placeholder="<%= t('static.contact.khName') %>" id="sign-up-khname" />
                        </div>
                    </div>
                    <div class="col-12 col-md-6">
                        <!-- Phone Number -->
                        <label for="contact" class="form-label fw-medium "><%= t('static.contact.phone') %></label>
                        <div class="input-field input-field-setting mb-4">
                            <i class="fas fa-phone"></i>
                            <input type="tel" id="contact" placeholder="<%= t('static.contact.enterPhone') %>" />
                        </div>
                    </div>
                    <div class="col-12 col-md-6">
                        <!-- Email -->
                        <label for="email" class="form-label fw-medium "><%= t('static.contact.email') %></label>
                        <div class="input-field input-field-setting">
                            <i class="fas fa-envelope"></i>
                            <input type="email" id="email" placeholder="<%= t('static.contact.enterEmail') %>" />
                        </div>
                    </div>
                </div>
                <!-- Comment -->
                <label for="address" class="form-label mt-0 fw-medium "><%= t('static.contact.Comment') %></label>
                <textarea class="form-control border-brand-sm mb-4" id="address" rows="3" placeholder="<%= t('static.contact.enterComment') %>"></textarea>
                <a href="javascript:void(0);"  class="btn btn-brand w-100 mb-3"><%= t('static.contact.saveChange') %></a>
                 <!-- Social Media Icons -->
            <div class="social-media contact-social-media fs-2 d-flex justify-content-center gap-3">
                <a href="#"><i class="fa-brands fa-facebook icon"></i></a>
                <a href="#"><i class="fa-brands fa-square-x-twitter icon"></i></a>
                <a href="#"><i class="fa-brands fa-telegram icon"></i></a>
                <a href="#"><i class="fa-brands fa-instagram icon"></i></a>
            </div>
            </form>
           
        </div>
    </div>
    <%- include("../../partials/footer.ejs")  %>
    <%- include("../../partials/script.ejs")  %>

</body>


</html>