<!DOCTYPE html>
<html lang="<%= lang %>">
<%- include("../../partials/head.ejs") %>
<body class="bg-white-stain">
    <%- include("../../partials/manage-event-header.ejs") %>

    <main>
        <div class>
            <div class="d-flex">
                <%- include("../../partials/manage-event-sidebar.ejs")  %>

                <section class="p-4 w-100">
                    <div class="px-3">
                        <div class="d-flex align-items-center">
                            <button onclick="history.back()" type="button" class="btn fw-medium border-0 ps-0 d-flex align-items-center mb-2">
                                <i class="fa-solid fa-angle-left fs-6 m-0 p-0 "></i>
                                <span class="m-0 ps-2"><a><%= t('event.req-transaction.backToReq-list') %></a></span>
                            </button>
                        </div>

                        <div class="card p-4 border-0 shadow-light-sm">
                            <h3><%= t('event.req-transaction.Transaction') %></h3>
                            <div class="row" id="row-transaction"></div>
                        </div>
    
                    </div>
                </section>
            </div>
        </div>
    </main>
        <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1"
            aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5"
                            id="exampleModalLabel"><%= t('event.req-transaction.disapproveReq') %></h1>
                        <button type="button" class="btn-close"
                            data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body" id="modal-disapprove">
                        <div class="mb-">
                            <div class="input-field input-field-setting" id="input-field-reject">
                              <i class="fas fa-lock"></i>
                              <input type="text" placeholder="<%= t('event.req-transaction.enter-rejReason') %>" id="reject" autofocus/>
                            </div>
                            <div
                              class="invalid_feedback text-danger d-flex align-items-center" id="invalid_feedback_reject">
                              <i class="bi bi-exclamation-triangle-fill d-flex align-items-center"></i>
                              <div class="ms-2"><%= t('event.req-transaction.required-rejReason') %></div>
                            </div>
                          </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary"
                            data-bs-dismiss="modal"><%= t('event.req-transaction.Close') %></button>
                        <button id="btn-disapprove" type="button"
                            class="btn btn-primary btn-disapprove"><%= t('event.req-transaction.Send') %></button>
                    </div>
                </div>
            </div>
        </div>

<%- include("../../partials/script.ejs") %>

<script src="/js/utils/organizer-sidebar.js"></script>



<script src="/js/events/request-transaction.js">

</script>

</body>
</html>