                                            <div>
                                                <button type="button" data-transaction-id="12345" class="btn btn-brand views-transaction" style="height: auto !important;"><i class="fa-solid fa-eye"></i></button>
                                            </div>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <!-- Pagination -->
                        <div class="pagination-container">
                            <button class="pagination-button btn-icon"
                                onclick="changePage(currentPage - 1)"
                                id="prevBtn" disabled><i
                                    class="fa-solid fa-angle-left"></i></button>
    
                            <div id="pagination-numbers"></div>
    
                            <button class="pagination-button btn-icon"
                                onclick="changePage(currentPage + 1)"
                                id="nextBtn"><i
                                    class="fa-solid fa-angle-right"></i></button>
                        </div>
                        </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </main>


