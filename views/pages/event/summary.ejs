<!DOCTYPE html>
<html lang="<%= lang %>">

    <%- include("../../partials/head.ejs") %>

    <body class="bg-white-stain">
        <%- include("../../partials/manage-event-header.ejs") %>
        <main class="dashboard">
            <div class>
                <div class="d-flex">
                    <%- include("../../partials/manage-event-sidebar.ejs") %>

                    <section class="p-4 w-100">
                        <div class="">
                            <main class="px-md-4 pb-md-3">
                                <div class="d-flex align-items-center">
                                    <button onclick="history.back()" type="button" class="btn fw-medium border-0 ps-0 d-flex align-items-center mb-2">
                                        <i class="fa-solid fa-angle-left fs-6 m-0 p-0 "></i>
                                        <span class="m-0 ps-2"><a><%= t('event.backToEvent') %></a></span>
                                    </button>
                                </div>
                                <div class="card mb-4 p-4">
                                    <h1 class="h3 mb-2"><%= t('event.summary.title') %></h1>
                                    <h2
                                        class="h5 text-muted mb-2" id="event-title"></h2>
                                    
                                    <div class="d-flex align-items-center">
                                        <small class="me-2 text-brand"><i data-lucide="locate-fixed" width="1rem"></i></small>
                                        <span id="event-type"></span>
                                    </div>
                                    <div class="d-flex align-items-center">
                                        <small class="me-2 text-brand"><i data-lucide="calendar-days" width="1rem"></i></small>
                                        <span id="event-date"></span>
                                    </div>
                                </div>
                                <div class="row g-4 mb-4">
                                    <div class="col-12 col-md-6 col-lg-3">
                                        <!-- <StatCard
                                    title="TICKETS SOLD"
                                    value={`${eventData.total_registration} tickets`}
                                    type="tickets"
                                  /> -->
                                        <div class="card stat-card">
                                            <div
                                                class="d-flex justify-content-between align-items-center">
                                                <div>
                                                    <h3 class="stat-title"><%= t('event.summary.ticketSold') %></h3>
                                                    <p class="stat-value" id="ticket-sold"></p>
                                                </div>
                                                <div style="color: #3B82F6;"><i
                                                        data-lucide="ticket-percent"></i></div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6 col-lg-3">
                                        <!-- <StatCard
                                    title="TICKETS EARNINGS"
                                    value={`$${totalEarnings.toFixed(2)}`}
                                    type="earnings"
                                  /> -->
                                        <div class="card stat-card">
                                            <div
                                                class="d-flex justify-content-between align-items-center">
                                                <div>
                                                    <h3 class="stat-title"><%= t('event.summary.ticketEarning') %></h3>
                                                    <p
                                                        class="stat-value" id="ticket-earning"></p>
                                                </div>
                                                <div class="" style="color: #10B981;"><i
                                                        data-lucide="circle-dollar-sign"></i></div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6 col-lg-3">
                                        <!-- <StatCard
                                    title="PARTICIPATED"
                                    value={`${eventData.total_checkin} attendant`}
                                    type="participated"
                                  /> -->
                                        <div class="card stat-card">
                                            <div
                                                class="d-flex justify-content-between align-items-center">
                                                <div>
                                                    <h3
                                                        class="stat-title"><%= t('event.summary.Participated') %></h3>
                                                    <p class="stat-value" id="participated"></p>
                                                </div>
                                                <div style="color: #06B6D4;" class={class}><i
                                                        data-lucide="user-check"></i></div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6 col-lg-3">
                                        <!-- <StatCard
                                    title="NOT YET PARTICIPATE"
                                    value={eventData.total_registration - eventData.total_checkin}
                                    type="notParticipated"
                                  /> -->
                                        <div class="card stat-card">
                                            <div
                                                class="d-flex justify-content-between align-items-center">
                                                <div>
                                                    <h3  class="stat-title"><%= t('event.summary.notParticipated') %></h3>
                                                    <p class="stat-value" id="not-participated">0</p>
                                                </div>
                                                <div style="color: #F59E0B;" class={class}><i
                                                        data-lucide="users"></i></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="mb-4" id="ticket-section">
                                    <!-- <TicketDetailsSection tickets={eventData.ticket} /> -->
                                    <div class="card p-4">
                                        <h2 class="h4 mb-4"><%= t('event.summary.ticketDetail') %></h2>
                                        <div class="table-container">
                                            <table class="custom-table">
                                                <thead>
                                                    <tr>
                                                        <th
                                                            class="text-start"><%= t('event.summary.ticketType') %></th>
                                                        <th
                                                            class="text-end"><%= t('event.price') %></th>
                                                        <th
                                                            class="text-end"><%= t('event.summary.ticketBought') %></th>
                                                        <th
                                                            class="text-end"><%= t('event.summary.totalEarning') %></th>
                                                    </tr>
                                                </thead>
                                                <tbody id="ticket-tbody">
                                                </tbody>
                                                <tfoot id="ticket-tfoot">
                                                </tfoot>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                                <!-- <ShareSection /> -->
                                <div class="card p-4">
                                    <h2 class="h4 mb-4"><%= t('event.summary.share') %></h2>
                                    <div class="mb-4">
                                        <p class="text-muted mb-2"><%= t('event.summary.eventLink') %> <i class="text-brand" data-lucide="link" width="1.25rem"></i></p>
                                        <div class="d-flex gap-2">
                                            <div
                                                class="share-link-container flex-grow-1 d-flex align-items-center">
                                                <i class="text-brand me-2" data-lucide="link" width="1.25rem"></i>
                                                <input id="input-link"
                                                    type="text"
                                                    class="share-link-input"
                                                    readOnly />
                                            </div>
                                            <button id="shareBtn"
                                                class="share-button">
                                                <%= t('event.copyLink') %>
                                            </button>
                                        </div>
                                    </div>
                                    <div class="d-flex gap-2">

                                        <div class="social-media-orgainzer d-flex">
                                            <a href="#"
                                                class="social-icon social-icon-organizer ms-0">
                                                <i class="fab fa-facebook-f"></i>
                                            </a>
                                            <a href="#" class="social-icon">
                                                <i class="fab fa-twitter"></i>
                                            </a>
                                            <a href="#" class="social-icon">
                                                <i class="fab fa-google"></i>
                                            </a>
                                            <a href="#" class="social-icon">
                                                <i class="fab fa-linkedin-in"></i>
                                            </a>
                                        </div>

                                    </div>
                                </div>
                            </main>
                        </div>
                    </section>

                </div>
            </div>
        </main>

    </body>
    <%- include("../../partials/script.ejs") %>
    <script src="/js/utils/organizer-sidebar.js"></script>
    <script src="/js/events/summary.js"></script>

</html>
